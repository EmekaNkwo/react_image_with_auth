{
  "compilerOptions": {
     "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
     "typeRoots": ["./node_modules/@types", "./src/typings"]
  },
 "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
